-- ==== SHEKELS VISUAL ====
local shekelAmount = 999999999
local shekelLabel = Instance.new("TextLabel")
shekelLabel.Size = UDim2.new(0, 200, 0, 30)
shekelLabel.Position = UDim2.new(0, 20, 0.05, 0)
shekelLabel.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
shekelLabel.TextColor3 = Color3.new(1, 0.85, 0)
shekelLabel.Font = Enum.Font.Arcade
shekelLabel.TextSize = 20
shekelLabel.Text = "üí∞ Shekels: " .. shekelAmount
shekelLabel.Parent = screenGui

local shekelBtn = Instance.new("TextButton")
shekelBtn.Size = UDim2.new(0, 160, 0, 30)
shekelBtn.Position = UDim2.new(0, 20, 0.13, 0)
shekelBtn.Text = "üí∏ Dupe Shekels (Visual)"
shekelBtn.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
shekelBtn.TextColor3 = Color3.new(1, 1, 1)
shekelBtn.Font = Enum.Font.Arcade
shekelBtn.TextSize = 18
shekelBtn.Parent = screenGui

shekelBtn.MouseButton1Click:Connect(function()
	shekelAmount += math.random(5000000, 10000000)
	shekelLabel.Text = "üí∞ Shekels: " .. shekelAmount
end)

-- ==== FUNCTIONALITY ====
local function createPlayerButton(name)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -10, 0, 25)
	btn.Position = UDim2.new(0, 5, 0, 0)
	btn.Text = name
	btn.BackgroundColor3 = Color3.fromRGB(80, 0, 0)
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.Arcade
	btn.TextSize = 16

	btn.MouseButton1Click:Connect(function()
		statusLabel.Text = "Freezing trade with " .. name .. "..."
		btn.Text = "‚è≥ Waiting..."
		btn.AutoButtonColor = false
		task.wait(15)
		statusLabel.Text = name .. " is frozen for trade!"
		btn.Text = name
		btn.AutoButtonColor = true
	end)

	return btn
end

local function updatePlayerList()
	playerList:ClearAllChildren()
	local y = 0
	for _, player in ipairs(Players:GetPlayers()) do
		if player ~= Players.LocalPlayer then
			local btn = createPlayerButton(player.Name)
			btn.Position = UDim2.new(0, 5, 0, y)
			btn.Parent = playerList
			y += 30
		end
	end
	playerList.CanvasSize = UDim2.new(0, 0, 0, y)
end

updatePlayerList()
Players.PlayerAdded:Connect(updatePlayerList)
Players.PlayerRemoving:Connect(updatePlayerList)

local eggNames = {"Fire Egg", "Shadow Egg", "Moonlight Egg", "Blood Egg", "Chaos Egg"}
eggBtn.MouseButton1Click:Connect(function()
	local pick = eggNames[math.random(#eggNames)]
	statusLabel.Text = "üîç Found: " .. pick
end)

local mutations = {"Glitched", "Rainbow", "Hellborn", "Cursed", "Demonic", "Inverted"}
mutBtn.MouseButton1Click:Connect(function()
	local pick = mutations[math.random(#mutations)]
	statusLabel.Text = "üß¨ Mutation: " .. pick
end)

local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
	minimized = not minimized
	for _, child in ipairs(frame:GetChildren()) do
		if child ~= title and child ~= minimizeBtn and child ~= closeBtn then
			child.Visible = not minimized
		end
	end
end)

closeBtn.MouseButton1Click:Connect(function()
	frame.Visible = false
	reopenBtn.Visible = true
end)

reopenBtn.MouseButton1Click:Connect(function()
	frame.Visible = true
	reopenBtn.Visible = false
end)
